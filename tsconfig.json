{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true
  }
}
